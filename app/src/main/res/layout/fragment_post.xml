<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.main.post.PostFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/post_top_bar"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#DEDCDC">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="게시물 작성"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold">
        </androidx.appcompat.widget.AppCompatTextView>
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/post_switch"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:checked="true"
            app:track="@drawable/post_switch_track_selector"
            android:thumb="@drawable/post_switch_thumb">
        </androidx.appcompat.widget.SwitchCompat>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/post_switch_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/post_switch"
            app:layout_constraintStart_toStartOf="@id/post_switch"
            app:layout_constraintEnd_toEndOf="@id/post_switch"
            android:layout_marginTop="30dp"
            android:text="전체 공개"
            android:textStyle="bold">
        </androidx.appcompat.widget.AppCompatTextView>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/post_et"
        android:layout_width="0dp"
        android:layout_height="280dp"
        app:layout_constraintTop_toBottomOf="@id/post_top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/post_chip_group"
        android:hint="내용을 작성하세요"
        android:gravity="top"
        android:layout_marginTop="30dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:maxLines="10"
        android:backgroundTint="@color/transparent100"
        android:textCursorDrawable="@drawable/search_cursor_drawable">
    </androidx.appcompat.widget.AppCompatEditText>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/post_chip_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/post_et"
        app:layout_constraintBottom_toTopOf="@id/post_hash_et"
        android:layout_marginStart="20dp">
    </com.google.android.material.chip.ChipGroup>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/post_hash_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/post_et"
        app:layout_constraintBottom_toTopOf="@id/post_img_list"
        android:backgroundTint="@color/transparent100"
        android:textCursorDrawable="@drawable/search_cursor_drawable"
        android:layout_marginTop="30dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:maxLength="35"
        android:maxLines="1"
        android:hint="여기에 원하는 해시태그 입력">
    </androidx.appcompat.widget.AppCompatEditText>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/post_img_list"
        android:layout_width="0dp"
        android:layout_height="110dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/post_hash_et">


    <androidx.cardview.widget.CardView
        android:id="@+id/post_posted_cv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="20dp">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/post_posted_iv1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@color/black">
        </androidx.appcompat.widget.AppCompatImageView>
    </androidx.cardview.widget.CardView>
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/post_posted_cancel1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/posting_cancel2"
        app:layout_constraintTop_toTopOf="@id/post_posted_cv1"
        app:layout_constraintStart_toEndOf="@id/post_posted_cv1"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="-10dp"
        android:background="@color/white"
        android:visibility="gone"
        android:scaleType="fitXY">
    </androidx.appcompat.widget.AppCompatImageButton>


        <androidx.cardview.widget.CardView
        android:id="@+id/post_posted_cv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/post_posted_cv1"
        app:layout_constraintBottom_toBottomOf="@id/post_posted_cv1"
        app:layout_constraintStart_toEndOf="@id/post_posted_cv1"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="20dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/post_posted_iv2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@color/black">
        </androidx.appcompat.widget.AppCompatImageView>

    </androidx.cardview.widget.CardView>
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/post_posted_cancel2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/posting_cancel2"
        app:layout_constraintTop_toTopOf="@id/post_posted_cv2"
        app:layout_constraintStart_toEndOf="@id/post_posted_cv2"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="-10dp"
        android:background="@color/white"
        android:visibility="gone"

        android:scaleType="fitXY">
    </androidx.appcompat.widget.AppCompatImageButton>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/post_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/post_img_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/post_add_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="15dp"
            app:srcCompat="@drawable/post_img_add">
        </androidx.appcompat.widget.AppCompatImageView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/post_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/post_finish_btn"
            android:layout_margin="15dp"
            android:text="완료"
            android:textColor="@color/black"
            android:textStyle="bold">
        </androidx.appcompat.widget.AppCompatButton>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>