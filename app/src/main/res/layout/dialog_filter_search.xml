<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent00"
    >
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/search_dialog_background"
        android:layout_width="350dp"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/posted_dialog_border">
    </androidx.appcompat.widget.AppCompatImageView>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/search_dialog_background"
        app:layout_constraintStart_toStartOf="@id/search_dialog_background"
        app:layout_constraintEnd_toEndOf="@id/search_dialog_background"
        android:layout_marginTop="30dp"
        android:text="게시물 기간 필터"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        >
    </androidx.appcompat.widget.AppCompatTextView>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/search_dialog_change_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/search_dialog_background"
        app:layout_constraintStart_toStartOf="@id/search_dialog_background"
        app:layout_constraintEnd_toEndOf="@id/search_dialog_background"
        android:layout_marginTop="80dp"
        >
    </androidx.appcompat.widget.AppCompatTextView>
    <SeekBar
        android:id="@+id/search_dialog_seekbar"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:thumb="@drawable/search_seekbar_thumb_custom"
        android:progressDrawable="@drawable/search_seekbar_custom"
        android:max="100"
        android:progress="10"
        app:layout_constraintTop_toTopOf="@id/search_dialog_background"
        app:layout_constraintBottom_toBottomOf="@id/search_dialog_background"
        app:layout_constraintStart_toStartOf="@id/search_dialog_background"
        app:layout_constraintEnd_toEndOf="@id/search_dialog_background"
        android:layout_centerHorizontal="true"
        tools:ignore="MissingConstraints" />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/search_dialog_background"
        app:layout_constraintStart_toStartOf="@id/search_dialog_background"
        app:layout_constraintEnd_toEndOf="@id/search_dialog_background"
        android:layout_marginBottom="50dp"
        android:text="기간을 설정하고 새로고침 버튼을 누르면 반영됩니다."
        android:textSize="13sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        >
    </androidx.appcompat.widget.AppCompatTextView>
</androidx.constraintlayout.widget.ConstraintLayout>