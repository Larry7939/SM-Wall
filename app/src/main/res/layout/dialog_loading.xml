<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:paddingTop="30dp"
    android:paddingBottom="30dp"
    android:paddingEnd="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ProgressBar
        android:id="@+id/loading_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:indeterminateDrawable="@drawable/loading_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="40dp"
        >
    </ProgressBar>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/loading_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading_login"
        app:layout_constraintStart_toEndOf="@id/loading_icon"
        app:layout_constraintTop_toTopOf="@id/loading_icon"
        app:layout_constraintBottom_toBottomOf="@id/loading_icon"
        android:textStyle="bold"
        android:layout_marginStart="70dp">
    </androidx.appcompat.widget.AppCompatTextView>

</androidx.constraintlayout.widget.ConstraintLayout>